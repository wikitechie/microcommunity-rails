.modal.hide.fade#wiki-modal
	.modal-header
		%a.close{"data-dismiss"=>"modal"}
			Ã—
		%h3 New wikipage
	.modal-body
		- @wikipage = Wikipage.new
		= form_for @wikipage, :url => wikipages_path, :html => { :class => :form } do |f|
			.clearfix
				= f.label :name
				.input
					= f.text_field :name, :class => 'text_field'
			.clearfix
				= f.label :description, t("activerecord.attributes.group.description", :default => "Description"), :class => :label
				.input
					= f.text_area :description, :class => 'text_area'

			.form-actions
				%button{:class => "btn primary", :type => "submit"} Save
				or
				= link_to "Cancel", groups_path
	.modal-footer
		%a.btn Close
		%a.btn.btn-primary Save changes

