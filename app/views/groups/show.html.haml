.row.page-header
	.span6
		%h1
			= @group.name
		%p
			= @group.description
	.span3
		- unless current_user.nil?
			- unless @group.users.include?(current_user)
				- params = {:controller => 'memberships', :action => 'create', :membership => {:group_id => @group.id, :user_id => current_user.id} }
				= button_to "Join", params, :class => "btn btn-primary btn-large pull-right", :id => "join-group"
.row
	.span4
		- if @group.users.include?(current_user)
			#group-publisher
				= form_for @post do |f|
					%p
						= f.text_area :text,  :class => "span4", :rows => 2
						= f.hidden_field :user_id, :class => 'number_field', :value => current_user.id
						= f.hidden_field :owner_type, :value => @group.class.to_s
						= f.hidden_field :owner_id, :value => @group.id
					%p= f.submit("Post", :class => "btn")

		#social-stream
			- unless @group.posts.empty?
				%table.table.table-condensed
					= render @group.posts.order("created_at DESC") + @group_activity

	.span5
		#content-stream
			- if @group.users.include?(current_user)
				%p
					= link_to "Wikipage", new_wikipage_path,{:remote => true, 'data-toggle' => 'modal', 'data-target' => "#wiki-modal", 'data-backdrop' => true, 'data-keyboard' => true, :class => "btn"}
				%hr
			- if @content_stream.nil?
				%p You currently have no content. To post new content pick one above
			- else
				%table.table.table-condensed
					- @content_stream.each do |activity|
						= render activity

.modal.hide.fade#wiki-modal
	.modal-header
		%a.close{"data-dismiss"=>"modal"}
			Ã—
		%h3 New wikipage
	.modal-body
		- @wikipage = Wikipage.new
		= form_for @wikipage, :url => wikipages_path, :html => { :class => :form } do |f|
			= render :partial => "wikipages/form", :locals => {:f => f}
	.modal-footer
		%a.btn Close
		%a.btn.btn-primary Save changes

